{
  "name": "conexus",
  "private": true,
  "workspaces": [
    "conexus-frontend",
    "conexus-backend"
  ],
  "scripts": {
    "dev:front": "npm --prefix conexus-frontend run dev",
    "dev:back": "npm --prefix conexus-backend run start:dev",
    "dev": "concurrently \"npm run dev:front\" \"npm run dev:back\""
  },
  "devDependencies": {
    "autoprefixer": "^10.4.27",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.2.1"
  }
}
